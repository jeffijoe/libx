{
  "exclude": ["node_modules", "lib", "examples"],
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./lib",
    "strict": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "importHelpers": false,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2020"]
  }
}
